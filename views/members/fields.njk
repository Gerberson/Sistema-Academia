<div class="item">
    <div>Avatar URL</div>
    <div><input type="url" name="avatar_url" placeholder="http://" value="{{ member.avatar_url }}"></div>
</div>

<div class="item">
    <div>Instrutor</div>
    <div><input type="text" name="name" placeholder="Nome do Membro" value="{{ member.name }}"></div>
</div>

<div class="item">
    <div>Email</div>
    <div><input type="email" name="email" placeholder="exempl@gmail.com" value="{{ member.email }}"></div>
</div>

<div class="item">
    <div>Aniversário</div>
    <div><input type="date" name="birth" placeholder="http://" value="{{ member.birth }}"></div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="M" 
                checked
                {% if member.gender == "M" %}
                    checked
                {% endif %}> Masculino
        </span>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="F"
                {% if member.gender == "F" %}
                    checked
                {% endif %}> Feminino
        </span>
    </div>
</div>

<div class="item">
    <div>Tipo Sanguíneo</div>
    <div> 
        <select name="blood">
            <option value="A+"{% if member.blood == "A+" %} selected {% endif %}>A+</option>
            <option value="A-"{% if member.blood == "A-" %} selected {% endif %}>A-</option>
            <option value="B+"{% if member.blood == "B+" %} selected {% endif %}>B+</option>
            <option value="B-"{% if member.blood == "B-" %} selected {% endif %}>B-</option>
            <option value="AB+"{% if member.blood == "AB+" %} selected {% endif %}>AB+</option>
            <option value="AB-"{% if member.blood == "AB-" %} selected {% endif %}>AB-</option>
            <option value="O+"{% if member.blood == "O+" %} selected {% endif %}>O+</option>
            <option value="O-"{% if member.blood == "O-" %} selected {% endif %}>O-</option>
        </select>
    <div>
</div>

<div class="item">
    <div>Peso (kg)</div>
    <div><input type="number" name="weight" placeholder="(kg)" value="{{ member.weight }}"></div>
</div>

<div class="item">
    <div>Altura (cm)</div>
    <div><input type="number" name="height" placeholder="(cm)" value="{{ member.height }}"></div>
</div>

<button type="submit">Salvar</button>